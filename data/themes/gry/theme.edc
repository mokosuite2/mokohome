    group { name: "launcher";

        parts {

            part { name: "bg";
                clip_to: "disclip";
                type: RECT;
                mouse_events: 1;
                description {
                    state: "default" 0.0;
                    rel1 { relative: 0 0; }
                    rel2 { relative: 1 1; }
                    color: 0 0 0 0;
                }
                description {
                    state: "selected" 0.0;
                    inherit: "default" 0.0;
                    color: COLOR_ORANGE_SOLID;
                }
            }

            part { name: "icon";
                clip_to: "disclip";
                type: SWALLOW;
                mouse_events: 0;
                repeat_events: 1;
                description {
                    state: "default" 0.0;
                    rel1 { relative: 0.05 0.05; }
                    rel2 { relative: 0.95 0.7; }
                    aspect: 1 1;
                    aspect_preference: BOTH;
                }
            }

            part { name: "titlebg";
                clip_to: "disclip";
                type: RECT;
                mouse_events: 0;
                repeat_events: 1;
                description {
                    state: "default" 0.0;
                    rel1.to: "title";
                    rel1.offset: -2 0;
                    rel2.to: "title";
                    rel2.offset: 2 -2;
                    color: COLOR_BLACK_TRANSLUCENT;
                }
            }

            part { name: "title";
                clip_to: "disclip";
                type: TEXT;
                mouse_events: 0;
                repeat_events: 1;
                effect: OUTLINE;
                description {
                    state: "default" 0.0;
                    rel1 {
                        relative: 0.05 0.7;
                        offset: 1 0;
                    }
                    rel2 {
                        relative: 0.95 0.95;
                        offset: -1 0;
                    }
                    text {
                        align: 0.5 0.5;
                        min: 0 0;
                        elipsis: 0.0;
                        font: "Droid";
                        size: (11*SCALE_FACTOR);
                    }
                    color: 255 255 255 255;
                }
            }

            part { name: "disclip";
                type: RECT;
                description {
                    state: "default" 0.0;
                    rel1.to: "bg";
                    rel2.to: "bg";
                }
                description {
                    state: "disabled" 0.0;
                    inherit: "default" 0.0;
                    color: 255 255 255 64;
                }
            }


        }   // parts

        programs {

            program {
                name: "launcher_press";
                signal: "mouse,down,1";
                source: "bg";
                action: STATE_SET "selected" 0.0;
                target: "bg";
            }

            program {
                name: "launcher_release";
                signal: "mouse,up,1";
                source: "bg";
                action: STATE_SET "default" 0.0;
                target: "bg";
            }

        }   // programs

    }   // group:launcher

    group { name: "widget";

        parts {

            part { name: "widget";
                type: SWALLOW;
                mouse_events: 1;
                //repeat_events: 1;
                description {
                    state: "default" 0.0;
                    rel1.to: "widget_drag";
                    rel2.to: "widget_drag";
                }
            }

            part { name: "widget_drag";
                type: RECT;
                mouse_events: 1;
                //repeat_events: 1;
                dragable {
                    //confine: "handle_constraint";
                    events: "widget_drag";
                    x: 1 1 0;
                    y: 1 1 0;
                }
                description {
                    state: "default" 0.0;
                    color: 0 0 0 0;
                    visible: 0;
                }
                description {
                    state: "visible" 1.0;
                    inherit: "default" 0.0;
                    color: 0 0 0 100;
                    visible: 1;
                }
            }

        }   // parts

        programs {

            program {
                name: "drag_start";
                signal: "drag_start";
                source: "widget";
                action: STATE_SET "visible" 1.0;
                target: "widget_drag";
            }

            program {
                name: "drag_end";
                signal: "drag_end";
                source: "widget";
                action: STATE_SET "default" 0.0;
                target: "widget_drag";
            }

        }   // programs

    }   // group: widget

}   // collections
